---
// Import header and footer to each page making it easier for the user to navigate between each page.
import Mainlayout from "../../layouts/secondary-header.astro";

// Sets the company name.
let companyname = "Whispering Woods";

// Import each hole from "../../components/course-overview/" 
import Hole10 from "../../components/course-overview/hole10.astro";
import Hole12 from "../../components/course-overview/hole12.astro";
import Hole13 from "../../components/course-overview/hole13.astro";
import Hole14 from "../../components/course-overview/hole14.astro";
import Hole15 from "../../components/course-overview/hole15.astro";
import Hole16 from "../../components/course-overview/hole16.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <!-- Meta Tags. -->
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- Title in the tab bar. -->
        <title>{companyname} - Course Overview</title>

        <!-- Google tag manager for Sprout Marketing. -->
        <!-- Google tag (gtag.js) -->
        <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-7D8R29D991"></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'G-7D8R29D991');
        </script>

        <!-- Icon image on the tab of each page. -->
        <link rel="icon" href="/images/logos/CroppedLogo2Black.png" media="(prefers-color-scheme: light)">
        <link rel="icon" href="/images/logos/CroppedLogo2.png" media="(prefers-color-scheme: dark)">
 
    </head>

    <style>
        /* Import Google Fonts */
        @import url('https://fonts.googleapis.com/css2?family=Raleway:wght@800&family=Roboto+Condensed:wght@400;600&display=swap');

        /* Apply styles to all headings (h1, h2, h3, h4, h5, h6) */
        h1, h2, h3 {
            font-family: 'Raleway', sans-serif;
            font-weight: 800; /* Heavy */
            font-size: 56pt; /* 75pt */
            text-transform: uppercase; /* Uppercase text */
            margin: 0; /* Optional: Remove default margin for headings */
        }

        h4, h5 {
            font-family: 'Raleway', sans-serif;
            font-weight: 800; /* Heavy */
            font-size: 28pt; /* 36pt */
            text-transform: uppercase; /* Uppercase text */
            margin: 0; /* Optional: Remove default margin for headings */
        }

        h6 {
            font-family: 'Raleway', sans-serif;
            font-weight: 800; /* Heavy */
            font-size: 21pt; /* 36pt */
            text-transform: uppercase; /* Uppercase text */
            margin: 0; /* Optional: Remove default margin for headings */
        }

        /* Apply styles to all paragraphs */
        p, ul, span, a {
            font-family: 'Roboto Condensed', sans-serif;
            font-weight: 400; /* Regular weight */
            font-size: 14pt; /* 14pt */
        }

        /* Determines if the logo in the tab of each page is black or white. */
        body {
            background-color: white; /* Light mode background */
        }

        @media (prefers-color-scheme: dark) {
            body {
                background-color: black; /* Dark mode background */
            }
        }
    </style>
    
    <body>

        <!-- This code is from Foreup for a marketing campaign. -->
        <!-- Do not edit this section of code. Could interfear with something on Foreup's end. -->
        <!-- Google Tag Manager (noscript) -->
        <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-MTD2N6TB"
            height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
        
        <!-- Import header and footer to each page making it easier for the user to navigate between each page. -->
        <!-- This is the secondary header which is used on all pages beside the index.astro page. -->
        <Mainlayout>
            <div class="container">
                <br />
                
                <h2><b>Course Overview:</b></h2>

                <hr />

                <!-- Hole 10 Information. -->
                <Hole10/>

                <!-- Hole 12 Information. -->
                <Hole12/>

                <!-- Hole 13 Information. -->
                <Hole13/>

                <!-- Hole 14 Information. -->
                <Hole14/>

                <!-- Hole 15 Information. -->
                <Hole15/>

                <!-- Hole 16 Information -->
                <Hole16/>

        </Mainlayout>
    </body>
</html>