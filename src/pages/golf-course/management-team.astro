        <!-- Meta Tags. -->
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- Title in the tab bar. -->
        <title>{companyname} - Management Team</title>

        <!-- This code is from Foreup for a marketing campaign. -->
        <!-- Do not edit this section of code. Could interfear with something on Foreup's end. -->
        <!-- Google Tag Manager -->
        <script is:inline>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
            new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
            j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
            'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
            })(window,document,'script','dataLayer','GTM-MTD2N6TB');</script>

        <!-- Icon image on the tab of each page. -->
        <link rel="icon" href="/images/logos/CroppedLogo2Black.png" media="(prefers-color-scheme: light)">
        <link rel="icon" href="/images/logos/CroppedLogo2.png" media="(prefers-color-scheme: dark)">

    </head>

    <style>
        /* Determines if the logo in the tab of each page is black or white. */
        body {
            background-color: white; /* Light mode background */
        }

        @media (prefers-color-scheme: dark) {
            body {
                background-color: black; /* Dark mode background */
            }
        }

        /* Styling for scrolling animation. */
        .hidden {
            opacity: 0;
            filter: blur(5px);
            transform: translateX(-100%);
            transition: all 1s;
        }

        .show {
            opacity: 1;
            filter: blur(0);
            transform: translateX(0)
        }
    </style>

    <script>
        // Script added: May 6th 2024:
        // Found: https://www.youtube.com/watch?v=T33NN_pPeNI

        // Scrolling animation.
        const observer = new IntersectionObserver((entries) => {

            // Can observe multiple entries all at the same time.
            // Because of this, you do for each to grab each entry.
            entries.forEach((entry) => {
                console.log(entry)

                // Checks to see if the entry is within the viewport.
                if (entry.isIntersecting) {

                    // Will make the class visible.
                    entry.target.classList.add('show');
                } else {

                    // Will make the class not-visible.
                    entry.target.classList.remove('show');
                }
            });
        });

        // Grabs all of the elements within the document that have the class '.hidden'.
        const hiddenElements = document.querySelectorAll('.hidden');
        hiddenElements.forEach((el) => observer.observe(el));
    </script>

    <body>

        <!-- This code is from Foreup for a marketing campaign. -->
