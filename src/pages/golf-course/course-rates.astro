---
// Import header and footer to each page making it easier for the user to navigate between each page.
import Mainlayout from "../../layouts/secondary-header.astro";

// Sets the company name.
let companyname = 'Whispering Woods';
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Meta Tags. -->
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- Title in the tab bar. -->
        <title>{companyname} - Course Rates</title>

        <!-- Google tag manager for Sprout Marketing. -->
        <!-- Google tag (gtag.js) -->
        <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-7D8R29D991"></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'G-7D8R29D991');
        </script>

        <!-- Icon image on the tab of each page. -->
        <link rel="icon" href="/images/logos/CroppedLogo2Black.png" media="(prefers-color-scheme: light)">
        <link rel="icon" href="/images/logos/CroppedLogo2.png" media="(prefers-color-scheme: dark)">

    </head>

    <style>
        /* Determines if the logo in the tab of each page is black or white. */
        body {
            background-color: white; /* Light mode background */
        }

        @media (prefers-color-scheme: dark) {
            body {
                background-color: black; /* Dark mode background */
            }
        }
    </style>
    
    <body>

        <!-- This code is from Foreup for a marketing campaign. -->
        <!-- Do not edit this section of code. Could interfear with something on Foreup's end. -->
        <!-- Google Tag Manager (noscript) -->
        <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-MTD2N6TB"
            height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>

        <!-- Import header and footer to each page making it easier for the user to navigate between each page. -->
        <!-- This is the secondary header which is used on all pages beside the index.astro page. -->
        <Mainlayout>

            <div class="container">
                <br>
                <h2><b>2024 Fall Rates:</b></h2>

                <hr>

                <p>Tee times can be made up to 7 days in advance.</p>
                <p>Practice balls are included with the round of golf 30 minutes prior to tee times.</p>

                <br>

                <p><b>Weekdays:</b></p>

                <p>18 Holes Green Fee with cart: $35.</p>
                <p>9 Hole Green Fee with cart: $25.</p>

                <br>

                <p><b>Weekends & Holidays:</b></p>

                <p>18 Holes Green Fee with cart: $45.</p>

                <br>

                <p><b>Senior/Junior(Monday-Friday):</b></p>

                <p>18 Holes Green Fee with cart: $30.</p>

                <br>

                <p><b>Rental Clubs:</b></p>

                <p>$40 per set(Tour Edge).</p>

                <br>

                <p><b>Range Passes:</b></p>
                <p>Avaliable Tuesday - Friday: $20 1 hour pass or $33 day pass.</p>

                <br>

                <p><b><i>*Military: $5 off rack rate.*</i></b></p>
                <p><b><i>*All Prices above include applicable taxes.*</i></b></p>
            </div>

        </Mainlayout>
        
    </body>
</html>