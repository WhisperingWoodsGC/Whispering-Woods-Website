---
// Import header and footer to each page making it easier for the user to navigate between each page.
import Mainlayout from "../../layouts/secondary-header.astro";

// Sets the company name.
let companyname = 'Whispering Woods';

import ViewTransitions from "astro/components/ViewTransitions.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <!-- ! META TAGS. -->
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- ! TAB TITLE. -->
        <title>{companyname} - Professional Staff</title>

        <ViewTransitions />

        <!-- ! GOOGLE TAG MANAGER FOR SPROUT MARKETING. DON'T TOUCH! -->
        <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-7D8R29D991"></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'G-7D8R29D991');
        </script>

        <!-- ! TAB ICONS. -->
        <link rel="icon" href="/images/logos/CroppedLogo2Black.png" media="(prefers-color-scheme: light)">
        <link rel="icon" href="/images/logos/CroppedLogo2.png" media="(prefers-color-scheme: dark)">

    </head>

    <style>
        /* Import Google Fonts */
        @import url('https://fonts.googleapis.com/css2?family=Raleway:wght@800&family=Roboto+Condensed:wght@400;600&display=swap');

        /* Apply styles to all headings (h1, h2, h3, h4, h5, h6) */
        h1, h2, h3 {
            font-family: 'Raleway', sans-serif;
            font-weight: 800; /* Heavy */
            font-size: 56pt; /* 75pt */
            text-transform: uppercase; /* Uppercase text */
            margin: 0; /* Optional: Remove default margin for headings */
        }

        h4, h5 {
            font-family: 'Raleway', sans-serif;
            font-weight: 800; /* Heavy */
            font-size: 28pt; /* 36pt */
            text-transform: uppercase; /* Uppercase text */
            margin: 0; /* Optional: Remove default margin for headings */
        }

        h6 {
            font-family: 'Raleway', sans-serif;
            font-weight: 800; /* Heavy */
            font-size: 18pt; /* 36pt */
            color: green;
            text-transform: uppercase; /* Uppercase text */
            margin: 0; /* Optional: Remove default margin for headings */
        }

        /* Apply styles to all paragraphs */
        p, ul, span, a {
            font-family: 'Roboto Condensed', sans-serif;
            font-weight: 400; /* Regular weight */
            font-size: 14pt; /* 14pt */
        }

        a {
            text-decoration: none;
            color: black;
        }

        /* Determines if the logo in the tab of each page is black or white. */
        body {
            background-color: white; /* Light mode background */
        }

        @media (prefers-color-scheme: dark) {
            body {
                background-color: black; /* Dark mode background */
            }
        }

        /* Styling the profile card */
        .profile-card {
            text-align: center;
            max-width: 250px;
            margin: 20px;
        }

        /* Styling the circular image */
        .profile-image {
            width: 250px;
            height: 250px;
            border-radius: 50%;
            overflow: hidden;
            margin: 0 auto;
        }

        .profile-image img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            border: 2px solid black;
            object-fit: cover;
        }

        /* Styling the name and position text */
        .profile-info {
            margin-top: 10px;
        }

        
    </style>

    <body>

        <!-- ! IMPORTS THE MAIN LAYOUT FROM "../LAYOUTS/SECONDARY-LAYOUT.ASTRO"-->
        <Mainlayout>

            <div class="container">
                <br>

                <h4><b>Professional Staff:</b></h2>

                <hr>

                <div class="row">
                    <div class="col d-flex justify-content-center">
                        <a href="/information/professional-staff-profile/tony-driscoll/">
                            <div class="profile-card">
                                <div class="profile-image">
                                    <img src="/images/management-team/anthonydriscoll.jpg" class="card-img-top" alt="Anthony Driscoll" transition:name="tonydriscoll">
                                </div>
                                <div class="profile-info">
                                  <h5 class="name">Tony Driscoll</h5>
                                  <h6>Director of Golf</h6>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col d-flex justify-content-center">
                        <a href="/information/professional-staff-profile/davis-garner/">
                            <div class="profile-card">
                                <div class="profile-image">
                                    <img src="/images/management-team/davisgarner.jpg" class="card-img-top" alt="Davis Garner" transition:name="davisgarner">
                                </div>
                                <div class="profile-info">
                                  <h5 class="name">Davis Garner</h5>
                                  <h6>General Manager</h6>
                                </div>
                              </div>
                        </a>
                    </div>
                    <div class="col d-flex justify-content-center">
                        <a href="/information/professional-staff-profile/taylor-johnson">
                            <div class="profile-card">
                                <div class="profile-image">
                                    <img src="/images/management-team/taylorjohnson.jpg" class="card-img-top" alt="Taylor Johnson" transition:name="taylorjohnson">
                                </div>
                                <div class="profile-info">
                                <h5 class="name">Taylor Johnson</h5>
                                <h6>Assistant Golf Professional</h6>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col d-flex justify-content-center">
                        <a href="/information/professional-staff-profile/jordan-greenwood/">
                            <div class="profile-card">
                                <div class="profile-image">
                                    <img src="/images/management-team/jordangreenwood.jpg" class="card-img-top" alt="Jordan Greenwood" transition:name="jordangreenwood">
                                </div>
                                <div class="profile-info">
                                  <h5 class="name">Jordan Greenwood</h5>
                                  <h6>Assistant Golf Professional</h6>
                                </div>
                              </div>
                        </a>
                    </div>
                </div>

                <br>

            </div>

        </Mainlayout>

    </body>
</html>