---
// Import header and footer to each page making it easier for the user to navigate between each page.
import HomepageLayout from "../layouts/homepage-layout.astro";

import Alerts from "../components/alerts.astro";

// Import three horizontal cards onto the index page.
import IndexThreeCards from "../components/index-three-cards.astro";

import MissionStatement from "../components/mission-statement.astro";

// Sets the company name.
let companyname = "Whispering Woods";

import ViewTransitions from "astro/components/ViewTransitions.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <!-- ! META TAGS. -->
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- ! TAB TITLE. -->
        <title>{companyname} - Home</title>

        <ViewTransitions />

        <!-- ! GOOGLE TAG MANAGER FOR SPROUT MARKETING. DON'T EDIT -->
        <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-7D8R29D991"></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'G-7D8R29D991');
        </script>
        
        <!-- ! TAB ICONS. -->
        <link rel="icon" href="/images/logos/CroppedLogo2Black.png" media="(prefers-color-scheme: light)">
        <link rel="icon" href="/images/logos/CroppedLogo2.png" media="(prefers-color-scheme: dark)">

    </head>

    <style>
        /* Import Google Fonts */
        @import url('https://fonts.googleapis.com/css2?family=Raleway:wght@800&family=Roboto+Condensed:wght@400;600&display=swap');

        /* Apply styles to all headings (h1, h2, h3, h4, h5, h6) */
        h1, h2, h3 {
            font-family: 'Raleway', sans-serif;
            font-weight: 800; /* Heavy */
            font-size: 56pt; /* 75pt */
            text-transform: uppercase; /* Uppercase text */
            margin: 0; /* Optional: Remove default margin for headings */
        }

        h4, h5 {
            font-family: 'Raleway', sans-serif;
            font-weight: 800; /* Heavy */
            font-size: 28pt; /* 36pt */
            text-transform: uppercase; /* Uppercase text */
            margin: 0; /* Optional: Remove default margin for headings */
        }

        h6 {
            font-family: 'Raleway', sans-serif;
            font-weight: 800; /* Heavy */
            font-size: 18pt; /* 36pt */
            color: green;
            text-transform: uppercase; /* Uppercase text */
            margin: 0; /* Optional: Remove default margin for headings */
        }

        /* Apply styles to all paragraphs */
        p, ul, span, a {
            font-family: 'Roboto Condensed', sans-serif;
            font-weight: 400; /* Regular weight */
            font-size: 14pt; /* 14pt */
        }

        /* Determines if the logo in the tab of each page is black or white. */
        body {
            background-color: lightgray; /* Light mode background */
        }

        @media (prefers-color-scheme: dark) {
            body {
                background-color: black; /* Dark mode background */
            }
        }

        .card-img {
            border-radius: 5px;
        }
        
    </style>
    
    <body class="bg-light">

        
        <!-- ! ADDES AN ALERT FOR THE INDEX PAGE. USED TO SHOW USERS DEALS AND OTHER INFORMATION. -->
        <!-- ! ALERTS CAN BE LOCATED AT "../COMPONENTS/ALERTS.ASTRO" -->
        <Alerts />

        <!-- ! IMPORTS THE HOMELAYOUT TO THE INDEX PAGE. -->
        <!-- ! HOMELAYOUT CAN BE LOCATED AT "../LAYOUTS/HOMEPAGE-LAYOUT.ASTRO" -->
        <HomepageLayout>

            <!-- TODO: UPDATE PHOTOS ON INDEX CARDS, PUT IN MISSION STATEMENT AND UPDATE TO NEW PHOTO. -->
            <!-- <IndexThreeCards />

            <MissionStatement /> -->
    
        </HomepageLayout>
        
    </body>
</html>
