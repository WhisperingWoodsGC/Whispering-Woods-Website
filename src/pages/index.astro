---
// Import header and footer to each page making it easier for the user to navigate between each page.
import HomepageLayout from "../layouts/homepage-layout.astro";

// Sets the company name.
let companyname = "Whispering Woods";
---

<!doctype html>
<html lang="en">
    <head>
        <!-- Meta Tags. -->
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- Title in the tab bar. -->
        <title>{companyname} - Home</title>

        <!-- This code is from Summit Media for a marketing campaign. -->
        <!-- Do not edit this section of code. Could interfear with something on Summit Media's end. -->
        <!-- Google Tag Manager -->
        <script is:inline>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
            new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
            j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
            'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
            })(window,document,'script','dataLayer','GTM-KB24MHNG');</script>
    
        <!-- Icon image on the tab of each page. -->
        <link rel="icon" href="/images/logos/CroppedLogo2Black.png" media="(prefers-color-scheme: light)">
        <link rel="icon" href="/images/logos/CroppedLogo2.png" media="(prefers-color-scheme: dark)">

    </head>

    <style>
        /* Determines if the logo in the tab of each page is black or white. */
        body {
            background-color: white; /* Light mode background */
        }

        @media (prefers-color-scheme: dark) {
            body {
                background-color: black; /* Dark mode background */
            }
        }
    </style>
    
    <body>

        <!-- This code is from Summit Media for a marketing campaign. -->
        <!-- Do not edit this section of code. Could interfear with something on Summit Media's end. -->
        <!-- Google Tag Manager (noscript) -->
        <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KB24MHNG"
            height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>

        <!-- Import header and footer to each page making it easier for the user to navigate between each page. -->
        <HomepageLayout />
        
    </body>
</html>
