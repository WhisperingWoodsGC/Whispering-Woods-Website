---
// Import header and footer to each page making it easier for the user to navigate between each page.
import Mainlayout from "../../layouts/secondary-header.astro";

// Sets the company name.
let companyname = 'Whispering Woods';

import ViewTransitions from "astro/components/ViewTransitions.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <!-- ! META TAGS. -->
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- ! TAB TITLE. -->
        <title>{companyname} - Leagues</title>

        <ViewTransitions />

        <!-- ! GOOGLE TAG MANAGER FOR SPROUT MARKETING. DON'T TOUCH! -->
        <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-7D8R29D991"></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'G-7D8R29D991');
        </script>

        <!-- ! TAB ICONS. -->
        <link rel="icon" href="/images/logos/CroppedLogo2Black.png" media="(prefers-color-scheme: light)">
        <link rel="icon" href="/images/logos/CroppedLogo2.png" media="(prefers-color-scheme: dark)">

    </head>

    <style>
        /* Import Google Fonts */
        @import url('https://fonts.googleapis.com/css2?family=Raleway:wght@800&family=Roboto+Condensed:wght@400;600&display=swap');

        /* Apply styles to all headings (h1, h2, h3, h4, h5, h6) */
        h1, h2, h3 {
            font-family: 'Raleway', sans-serif;
            font-weight: 800; /* Heavy */
            font-size: 56pt; /* 75pt */
            text-transform: uppercase; /* Uppercase text */
            margin: 0; /* Optional: Remove default margin for headings */
        }

        h4, h5 {
            font-family: 'Raleway', sans-serif;
            font-weight: 800; /* Heavy */
            font-size: 28pt; /* 36pt */
            text-transform: uppercase; /* Uppercase text */
            margin: 0; /* Optional: Remove default margin for headings */
        }

        h6 {
            font-family: 'Raleway', sans-serif;
            font-weight: 800; /* Heavy */
            font-size: 18pt; /* 36pt */
            color: green;
            text-transform: uppercase; /* Uppercase text */
            margin: 0; /* Optional: Remove default margin for headings */
        }

        /* Apply styles to all paragraphs */
        p, ul, span, a {
            font-family: 'Roboto Condensed', sans-serif;
            font-weight: 400; /* Regular weight */
            font-size: 14pt; /* 14pt */
            text-decoration: none;
            color: black;
        }

        /* Determines if the logo in the tab of each page is black or white. */
        body {
            background-color: white; /* Light mode background */
        }

        @media (prefers-color-scheme: dark) {
            body {
                background-color: black; /* Dark mode background */
            }
        }
    </style>

    <body>
        
        <!-- ! IMPORTS THE MAIN LAYOUT FROM "../LAYOUTS/SECONDARY-LAYOUT.ASTRO"-->
        <Mainlayout>

            <div class="container">
                <br>
                <h4>Leagues:</h4>
                <hr>
                
                <h6>Monday Night League:</h6>
                <p><b>Monday Nights Skins:</b></p>
                <p><b></b></p>

                <h6>Tuesday Night League:</h6>
                <p><b>Ladies League:</b></p>
                <p><b>Kiewit League:</b></p>

                <h6>Wednesday Night League:</h6>
                <p><b>Jon Gibbs League(2 Man Scramble):</b></p>


                <h6>Thrusday Night League:</h6>
                <p><b>Tom Holmes Memorial League:</b></p>

                <h6>Friday Night League:</h6>
                <p><b>Couples League:</b></p>


                <br>

                <!-- ! USED IFRAME TO IMPORT GOOGLE CALENDAR. A NEW CALENDAR IS USED FOR LEAGUES. -->
                <h6>League Calendar:</h6>
                <p><b><i>*Green: Front Nine*</i></b><br><b><i>*Blue: Back Nine*</i></b></p>
                <div class="row">
                    <iframe src="https://calendar.google.com/calendar/embed?height=600&wkst=1&ctz=America%2FChicago&showPrint=0&showTz=0&showCalendars=0&showTabs=0&showTitle=0&src=YWRkcmVzc2Jvb2sjY29udGFjdHNAZ3JvdXAudi5jYWxlbmRhci5nb29nbGUuY29t&src=Y183MTJhZjg2ZDk3YmI1MzMwNTkyMDQyMWVjMTE3NTBlZGU5NThlMDdkNzI4NzhhN2I5MDc1MTNlMGRiNDcyYjVlQGdyb3VwLmNhbGVuZGFyLmdvb2dsZS5jb20&color=%2333B679&color=%23F6BF26" style="border-width:0" width="800" height="600" frameborder="0" scrolling="no"></iframe>
                </div>
                <br>
            </div>

                    
        </Mainlayout>
        
    </body>
</html>
